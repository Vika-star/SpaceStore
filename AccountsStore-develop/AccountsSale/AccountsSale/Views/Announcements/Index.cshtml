<section class="table-announ container-myself-info back-blur">
    <div class="create-product">
        <a asp-controller="Announcements" asp-action="Create" class="btn-create-product">Добавить объявление</a>
    </div>
    <table class="table ">
        <thead>
            <tr class="mx-auto">
                <th scope="col">
                    Название
                </th>
                <th scope="col">
                    Цена
                </th>
                <th scope="col"></th>
            </tr>
            <tr class="justTh">
                <th colspan="3"></th>
            </tr>
            </tr>
        </thead>
        <tbody>
            @foreach (var announcement in Model.Announcements)
            {
                <tr>
                    <th scope="row">@announcement.Name</th>
                    <td>@announcement.Cost</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@announcement.Id" class="btn-details btn-product">Просмотр</a>
                        <a asp-action="Edit" asp-route-id="@announcement.Id" class="btn-edit btn-product">Редактирование</a>
                        <a asp-action="Delete" asp-route-id="@announcement.Id" class="btn-delete btn-product">Удаление</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</section>