<form asp-controller="Announcements" asp-action="Create" method="post">
    <div class="form-group">
        <label for="name">Имя</label>
        <input name="name" class="form-control" />
    </div>
    <div class="form-group">
        <label for="cost">Цена</label>
        <input type="number" name="cost" class="form-control" />
    </div>
    <div class="form-group">
        <label for="description">Описание</label>
        <textarea column="20" rows="10" name="description" class="form-control" ></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Сохранить объявление</button>
</form>