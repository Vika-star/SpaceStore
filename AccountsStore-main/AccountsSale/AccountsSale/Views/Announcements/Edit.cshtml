@model AccountsSale.ViewModels.AnnouncementViewModel

<form asp-controller="Announcements" asp-action="Edit" method="post">
    <div class="form-group">
        <label for="name">Имя</label>
        <input name="name" class="form-control" value="@Model.Name" />
    </div>
    <div class="form-group">
        <label for="cost">Цена</label>
        <input type="number" name="cost" class="form-control" value="@Model.Cost.ToString().Replace(',', '.')" />
    </div>
    <div class="form-group">
        <label for="description">Описание</label>
        <textarea column="20" rows="10" name="description" class="form-control">@Model.Description</textarea>
    </div>
    <div class="form-group">
        <input type="number" name="id" class="form-control" value="@Model.Id" hidden />
    </div>
    <button type="submit" class="btn btn-primary">Сохранить изменения</button>
</form>